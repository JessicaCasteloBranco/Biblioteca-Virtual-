@page "/AdicionarUsuario"

<h3>Adicionar Novo Livro</h3>


<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Salvar</button>
<button class="btn btn-danger" @onclick="IncrementCount">Deletar</button>
@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++; 
    }
}
